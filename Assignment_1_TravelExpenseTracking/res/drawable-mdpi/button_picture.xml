<?xml version="1.0" encoding="utf-8"?>
<selector  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="@color/cadetblue" android:endColor="@color/cadetblue" android:angle="270" />           
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="@color/cadetblue" android:endColor="@color/cadetblue" android:angle="270" />           
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="@color/skyblue" android:endColor="@color/skyblue" android:angle="90" />            
        </shape>
    </item>
</selector>
